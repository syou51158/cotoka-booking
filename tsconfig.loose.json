{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false
  },
  "exclude": [
    "node_modules",
    ".next",
    "src/app/**/*",
    "src/i18n/**/*",
    "src/lib/**/*",
    "src/server/**/*"
  ],
  "include": ["next-env.d.ts"]
}
